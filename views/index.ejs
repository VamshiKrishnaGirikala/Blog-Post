<% include ./partials/header %>


<div class="ui main text container ">
    <div class="ui huge header"> RESTful Blog</div>
    <div class="ui top attached segment">
        
        <div class="ui divided items">
            <div class="item">
                
            </div>
            <% for (var i=0;i<blogData.length;i++){ %>
            <div class="item">
             <div class="image"> 
             <img src= "<%=blogData[i].image%>" >
             </div> 
             <div class="content">
                 <a class="header" href="/blogs/<%= blogData[i]._id %>"> 
                 <%=blogData[i].title;%>
                 </a>
                 <div class="meta">
                  <span><%=blogData[i].created.toDateString();%></span>   
                 </div>
                 <div class="description">
                     <p><%-blogData[i].body.substring(0,100);%>...</p>
                 </div>
                 <div class="extra">
                     <a class="ui blue button" href="/blogs/<%= blogData[i]._id %>">Read More
                     <i class="right chevron icon"></i>
                     </a>
                 </div>
             </div>
            </div>
            <% } %>
        </div>
    </div>

  </div>

<% include ./partials/footer %>


